{
  "name": "code-roast",
  "publisher": "accidental-mvp",
  "displayName": "code-roast",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-roast.start",
        "title": "Start Code Roast"
      },
      {
        "command": "code-roast.viewSummary",
        "title": "View Roast Summary"
      }
    ],
    "configuration": {
      "title": "Code Roast",
      "properties": {
        "codeRoast.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Gemini API key (https://makersuite.google.com/app/apikey)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
  "type": "git",
    "url": "https://github.com/accidental-mvp/code-roast"
  }
}
